<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/alcubierre</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="DialogAnimationfrombootom">
        <item name="android:fontFamily">@font/alcubierre</item>
        <item name="android:windowEnterAnimation">@anim/slid_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slid_down_animation</item>
    </style>


    <style name="style_actionbar_title">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TimePickerTheme"  parent="Theme.MaterialComponents.Light.Dialog">

    </style>
</resources>
